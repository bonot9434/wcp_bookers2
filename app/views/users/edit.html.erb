<div class="container">
  <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>error prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name , class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" , class: 'form-control-file user_image' %>
        </div>
        <div class="form-group">
          <label for="user_introducion">Introduction</label>
          <%= f.text_area :introduction , class: 'form-control introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: 'btn btn-success' %>
        </div>
        <% end %>
     </div>
  </div>
</div>
